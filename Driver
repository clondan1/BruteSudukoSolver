package Brute_Force1;

import java.util.Scanner;

public class Driver
{
	private static Solver solver;

	public static void main(String[] args)
	{
		try
		{
			Scanner scanner = new Scanner(System.in);
			System.out.println("Please input a file location: ");
			String fileString = scanner.nextLine();
			scanner.close();

			solver = new Solver(fileString);

			solver.displayPuzzle();
			System.out.println();
			solver.solve();
			System.out.println();
			solver.displayPuzzle();
		}
		catch(Exception e)
		{
			System.out.println("This is an invalid file.");
			System.out.println();
		}
	}
}

